<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TeachersSpace" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_200</item>
<!--        <item name="colorPrimaryVariant">@color/blue_700</item>-->
        <item name="colorOnPrimary">@color/beige</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/beige</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/blue_500</item>
        <item name="android:textColor">@color/beige</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:fontFamily">@font/lexend</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/blue_200</item>
    </style>
</resources>