<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TeachersSpace" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_200</item>
<!--        <item name="colorPrimaryVariant">@color/blue_700</item>-->
        <item name="colorOnPrimary">@color/beige</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/beige</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/blue_500</item>
        <item name="android:textColor">@color/beige</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerTheme</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationTheme</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/blue_200</item>
    </style>

    <style name="TimePickerTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="android:textColor">@color/blue_500</item>
    </style>

    <style name="BottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@drawable/navbar_border_top</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorOnPrimary">@color/beige</item>
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/beige</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <item name="android:windowBackground">@color/blue_500</item>
        <item name="android:textColor">@color/beige</item>
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="FirebaseUI.TextInputEditText.EmailField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundColor">@color/beige</item>
    </style>
</resources>